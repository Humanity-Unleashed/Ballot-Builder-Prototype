{
  "name": "Ballot Builder - Backend Development",

  // Use our custom Dockerfile for the dev container
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // Features to add to the dev container
  "features": {
    // Git for version control
    "ghcr.io/devcontainers/features/git:1": {},
    // GitHub CLI for PR management
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Forward port 3001 so the API is accessible from the host
  "forwardPorts": [3001],

  // Mount the backend folder for live editing
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",

  // Environment variables for development
  "containerEnv": {
    "NODE_ENV": "development"
  },

  // Run these commands after the container is created
  "postCreateCommand": "cd backend && npm install",

  // Run the dev server when the container starts
  "postStartCommand": "cd backend && npm run dev",

  // VS Code settings inside the container
  "customizations": {
    "vscode": {
      // Extensions to install in the container
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "humao.rest-client",
        "christian-kohler.npm-intellisense"
      ],
      // Editor settings
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },

  // Use non-root user for security
  "remoteUser": "node"
}
