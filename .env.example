# ============================================
# Ballot Builder - Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to git - it contains secrets!

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
# Connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ballotbuilder:localdev123@localhost:5432/ballotbuilder

# Password for Docker PostgreSQL container
DB_PASSWORD=localdev123

# --------------------------------------------
# Redis Cache
# --------------------------------------------
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Vector Database (Qdrant)
# --------------------------------------------
QDRANT_URL=http://localhost:6333

# --------------------------------------------
# Authentication (JWT)
# --------------------------------------------
# Secret key for signing JWTs - CHANGE THIS IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Token expiration times
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# --------------------------------------------
# CORS Settings
# --------------------------------------------
# Allowed origins for API requests (comma-separated)
# In production, set to your app's domain
CORS_ORIGIN=*

# --------------------------------------------
# AI/LLM API Keys
# --------------------------------------------
# Choose one or more based on your needs

# OpenAI API Key - Get from https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude API Key - Get from https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Deep Infra API Key - Get from https://deepinfra.com/
# DEEPINFRA_API_KEY=your-deepinfra-api-key-here

# --------------------------------------------
# External APIs
# --------------------------------------------
# Ballotpedia API - Contact data@ballotpedia.org for access
# BALLOTPEDIA_API_KEY=your-ballotpedia-api-key-here

# Google Civic API - Get from https://console.developers.google.com
# GOOGLE_CIVIC_API_KEY=your-google-civic-api-key-here

# --------------------------------------------
# Email Service (for notifications)
# --------------------------------------------
# SendGrid API Key - Get from https://sendgrid.com
# SENDGRID_API_KEY=your-sendgrid-api-key-here
# FROM_EMAIL=noreply@ballotbuilder.app

# --------------------------------------------
# Error Tracking (Sentry)
# --------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn-here
